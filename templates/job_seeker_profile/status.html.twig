{% extends 'base.html.twig' %}

{% block title %}your job application{% endblock %}

{% block body %}
{% if app.user %}
    <div class="mb-3 text-end">
       <a href="{{ path('app_jobseeker') }}"><i class="fa-solid fa-house"></i>HomePage</a>
        <a href="{{ path('app_logout') }}" class="btn btn-danger btn-sm">Logout</a>
    </div>
{% endif %}


{% if applications is empty %}
    <div class="alert alert-info">You haven't applied to any jobs yet.</div>
{% else %}
    <table class="table table-striped table-bordered align-middle">
        <thead class="table-dark">
            <tr>
                <th>Company</th>
                <th>Job Title</th>
                <th>Status</th>
            </tr>
        </thead>

        <tbody>
            {% for app in applications %}
                <tr>
                    <td>{{ app.job.employer }}</td>
                    <td>{{ app.job.title }}</td>
                    <td>
                         {{ app.status|capitalize }}
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endif %}
{% endblock %}
