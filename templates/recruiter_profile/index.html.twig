{% extends 'base.html.twig' %}

{% block title %}Recruiter index{% endblock %}

{% block body %}
    <h1>Recruiter index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>CompanyName</th>
                <th>Location</th>
                <th>About</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for recruiter in recruiters %}
            <tr>
                <td>{{ recruiter.id }}</td>
                <td>{{ recruiter.companyName }}</td>
                <td>{{ recruiter.location }}</td>
                <td>{{ recruiter.About }}</td>
                <td>
                    <a href="{{ path('app_recruiter_profile_show', {'id': recruiter.id}) }}">show</a>
                    <a href="{{ path('app_recruiter_profile_edit', {'id': recruiter.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_recruiter') }}"><i class="fa-solid fa-house"></i>HomePage</a>

    <a href="{{ path('app_recruiter_profile_new') }}">Create new</a>
{% endblock %}
