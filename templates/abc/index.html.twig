{% extends 'base.html.twig' %}

{% block title %}Applications index{% endblock %}

{% block body %}
    <h1>Applications index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Status</th>
                <th>AppliedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for application in applications %}
            <tr>
                <td>{{ application.id }}</td>
                <td>{{ application.status }}</td>
                <td>{{ application.appliedAt ? application.appliedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_abc_show', {'id': application.id}) }}">show</a>
                    <a href="{{ path('app_abc_edit', {'id': application.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_abc_new') }}">Create new</a>
{% endblock %}
